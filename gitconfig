[user]
	name = John Weachock
	email = jweachock@gmail.com

[core]
	pager = ~/dots/gitpager.sh

[color]
	ui = true
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = cyan bold
	local = blue bold
	remote = red bold

[color "diff"]
	plain = white
	meta = cyan bold
	frag = cyan
	old = red
	new = green
	commit = black bold

[color "status"]
	added = green
	changed = blue bold
	untracked = cyan bold

[alias]
	st = status -s
	ci = commit
	br = branch
	cdbr = checkout
	rmbr = branch -d
	mkbr = branch
	lsbr = branch -v
	mvbr = branch -m
	co = checkout
	cl = clone
	df = diff
	lg = log --graph --pretty=format:'%C(bold red)%h%C(reset) %C(green)%ad%C(blue)%d%C(reset) %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	mg = merge --no-ff
	fuse = merge --no-ff
	new = !sh -c 'git lg $1@{1}..$1@{0} "$@"'
