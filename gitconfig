[user]
	name = John Weachock
	email = jweachock@gmail.com

[core]
	pager = ~/dots/gitpager.sh

[color]
	ui = true
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = cyan bold
	local = blue bold
	remote = red bold

[color "diff"]
	plain = white
	meta = cyan bold
	frag = cyan
	old = red
	new = green
	commit = black bold

[color "status"]
	added = green
	changed = blue bold
	untracked = cyan bold

[alias]
	st = status -s
	ci = commit
	br = branch
	co = checkout
	df = diff
	dfs = diff --staged
	l = log --pretty=format:'%C(bold red)%h%C(reset) %C(green)%ad%C(blue)%d%C(reset) %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ls = !git l --simplify-by-decoration
	la = !git l --all
	las = !git ls --all
	lg = !git l --graph
	lgs = !git ls --graph
	lga = !git lg --all
	lgas = !git ls --graph --all
	unstage = reset HEAD
