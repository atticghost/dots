[user]
	name = John Weachock
	email = jweachock@gmail.com

[core]
	pager = ~/dots/gitpager.sh

[color]
	ui = true
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = cyan bold
	local = blue bold
	remote = red bold

[color "diff"]
	plain = white
	meta = cyan bold
	frag = cyan
	old = red
	new = green
	commit = black bold

[color "status"]
	added = green
	changed = blue bold
	untracked = cyan bold
	branch = blue

# how the hell do I un-boold these things?
# it seems like they've still got the bolds
# from other places
[color "decorate"]
	branch = blue
	remoteBranch = red
	HEAD = cyan
	tag = magenta
	stash = black

[alias]
	unstage = reset -q HEAD --
	discard = checkout --
	tags = tag
	branches = branch -a
	remotes = remote -v
	stashes = stash list
	contributors = shortlog -s -n

	st = status -s
	ci = commit
	br = branch
	co = checkout
	df = diff
	dfs = diff --staged

	stl = !git log --pretty=format:'%C(white)%h%C(auto)%d' -1 && git log --pretty=format:'%C(blue)%ad%C(reset)' --date=local -1 && git log --pretty=format:%s -1 && git status -s

	top = log --pretty=format:'%C(bold red)%h%C(reset)%C(auto)%d%C(reset)' --abbrev-commit --all --graph --simplify-by-decoration --date-order
	l = log --pretty=format:'%C(bold red)%h%C(reset) %C(green)%ad %C(bold yellow)%an%C(reset)%C(auto)%d%C(reset) %s%C(reset)' --abbrev-commit --date-order --date=short

	las = !git l --all --simplify-by-decoration
	lgs = !git l --graph --simplify-by-decoration
	lga = !git l --graph --all

	lgas = !git l --graph --all --simplify-by-decoration

[push]
	default = simple
