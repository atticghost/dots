[core]
	pager = ~/dots/gitpager.sh

[color]
	ui = true
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = cyan bold
	local = blue bold
	remote = red bold

[color "diff"]
	plain = white
	meta = cyan bold
	frag = cyan
	old = red
	new = green
	commit = black bold

[color "status"]
	added = green
	changed = blue bold
	untracked = cyan bold

[alias]
	st = status
	ci = commit
	br = checkout
	cdbr = checkout
	rmbr = branch -d
	mkbr = branch
	lsbr = branch
	mvbr = branch -m
	co = checkout
	cl = clone
	df = diff
	lg = log --oneline --graph
	mg = merge --no-ff
	fuse = merge --no-ff
