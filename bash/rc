# vim:ft=sh

# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# this makes tmux play nicely with gnome-terminal
if [ $TERM == 'xterm' ]; then
	export TERM=xterm-256color
fi
[ $TERM != "screen" ] && hash tmux &>/dev/null && exec tmux

[ -f ~/dots/bash/env ] && source ~/dots/bash/env
[ -f ~/dots/bash/alias ] && source ~/dots/bash/alias
[ -f ~/dots/bash/prompt ] && source ~/dots/bash/prompt
[ -x ~/.motd ] && ~/.motd

# enable programmable completion features (you don't need to enable
# this, if it's already enabled in /etc/bash.bashrc and /etc/profile
# sources /etc/bash.bashrc).
if [ -f /etc/bash_completion ] && ! shopt -oq posix; then
    . /etc/bash_completion
fi
