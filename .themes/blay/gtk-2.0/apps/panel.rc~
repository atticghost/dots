style "theme-panel" = "murrine-dark"
{
	xthickness	= 0
	ythickness	= 0
	
	bg_pixmap[NORMAL] = "img/panel.png"
	bg[NORMAL]	= "#2E3338"
	bg[ACTIVE]	= "#22262A"
	bg[PRELIGHT]	= "#22262A"

	fg[NORMAL]	= "#C7CCD1"
	fg[ACTIVE]	= "#737F8C"
	fg[PRELIGHT]	= "#737F8C"
	
	text[NORMAL]	= "#C7CCD1"
	text[ACTIVE]	= "#737F8C"
	text[PRELIGHT]	= "#737F8C"

	engine "murrine" {
		border_shades	= { 0.0, 0.0 }
		contrast	= 0.0
		roundness	= 0
		glowstyle	= 0
		glow_shade	= 0.0
		glazestyle	= 0
		trough_border_shades	= { 0.0, 0.0 } # improve visibility in panel-plugins using the progressbar (xfce4-timer-plugin)
	}
}

style "theme-panel-text"
{
	fg[NORMAL]	= "#C7CCD1"
	fg[ACTIVE]	= "#737F8C"
	fg[PRELIGHT]	= "#737F8C"
	
	text[NORMAL]	= "#C7CCD1"
	text[ACTIVE]	= "#737F8C"
	text[PRELIGHT]	= "#737F8C"
}

style "theme-main-menu-text" = "theme-panel-text"
{
	fg[PRELIGHT]   = "#C7CCD1"
	text[PRELIGHT] = "#C7CCD1"
}

